extends layout

block content
  h2 Log In
  h6 Don't have an account? 
    a#sign-up(href='/signup') Sign up

  form(method="POST", action="/login")
    div.form-group
      label(for="username") Username
      input.form-control(type='text', id='username', placeholder="Enter your username", name="username", value=(user && user.username) ? user.username : '')
      
    div.form-group
      label(for="password") Password
      input.form-control(type='password', id='password', placeholder="Enter your password", name="password")
    
    button.btn.btn-primary(type="submit") Log in
