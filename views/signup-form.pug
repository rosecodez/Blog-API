extends layout

block content
  br
  h6 Already have an account?
    a#log-in(href='/users/login') Log in

  h5 Sign up
  form(method="POST", action="/users/signup")
    .form-group
      label.form-label(for="username") Username
      input.form-control#username(type='text', placeholder="Username", name="username", value=(user && user.username) ? user.username : '')

    .form-group
      label.form-label(for="password") Password
      input.form-control#password(type='password', placeholder="Password", name="password")

    button.btn.btn-primary(type="submit") Sign up

  if errors && errors.length > 0
    ul.text-danger
      each error in errors
        li= error.msg
